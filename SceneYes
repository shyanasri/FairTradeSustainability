package greenfoodpicker;

import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.Event;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.FontWeight;
import javafx.scene.text.Text;
import javafx.stage.Stage;
/**
 *
 * @author jjmar
 */
public class GreenFoodPicker extends Application {
    private Object icon;
    
    @Override
    public void start(Stage primaryStage) {
        GridPane root = new GridPane();
        
        CSS tree = new CSS();
        tree.setAlignment(Pos.TOP_CENTER);
        
       
        root.setAlignment(Pos.CENTER);
        root.setHgap(10);
        root.setVgap(10);
        root.setPadding(new Insets(5, 5, 5, 5));
        
        Text s = new Text("                                              Congratulations,                    " + "\n" ); 
        Text t = new Text("you have successfully chosen a sustainably sourced product!!");
        t.setFont(Font.font("Calibri", FontWeight.NORMAL, 20));
        s.setFont(Font.font("Calibri", FontWeight.NORMAL, 20));
        root.add(t, 0, 0, 2, 2);
        root.add(s, 0, 0, 2, 1);
        
        Button btns2 = new Button("LEARN MORE");
        HBox hbBtns2 = new HBox(10);
        hbBtns2.setAlignment(Pos.BOTTOM_CENTER);
        hbBtns2.getChildren().add(btns2);
        root.add(hbBtns2, 1, 4);
        
        Scene scene = new Scene(root, 800, 275);
        scene.getStylesheets().add("Users\\jjmar\\Documents\\recproject\\FairTradeSustainability\\start\\pages\\GreenFoodPicker\\tree-icon.css");
        
        primaryStage.setTitle("Green Food Picker");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        launch(args);
    }
    
}
